{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles including a comment count , ordered by date is default",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id":{
    "description": "serves the article with specified id",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments":{
    "description": "serves an array of comments for the given article_id , sorted by most recent comment",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "icellusedkars",
          "body": "I hate streaming noses",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments":{
    "description": "create a new comment on the article provided by id and sends back the new comment",
    "queries": [],
    "examplesRequest":{"username":"example_user", "body": "content of new comment"},
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "example_user",
          "body": "content of new comment",
          "article_id": 1
        }
      ]
    }
  },
  "GET /api/articles/:article_id":{
    "description": "updates the votes on the article with specified id and then send the updated article",
    "queries": [],
    "examplesRequest":{
      "inc_votes": 10 
    },
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 10,
          "comment_count": 6
        }
      ]
    }
  }
  

}


